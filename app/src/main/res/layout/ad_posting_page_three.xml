<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ad_post_third_page"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <!-- text hints possibly needs to be localized -->

    <Spinner
        android:id="@+id/adCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/one_sided_border_editfield"
        android:spinnerMode="dropdown" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType=""
        android:hint="@string/ad_city"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:textColorHint="@color/darkgray"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/one_sided_border_editfield"
        android:id="@+id/adCity"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true" />


    <Spinner
        android:id="@+id/adProvince"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/one_sided_border_editfield"
        android:spinnerMode="dropdown" />
    <include layout="@layout/next_page"></include>

</LinearLayout>